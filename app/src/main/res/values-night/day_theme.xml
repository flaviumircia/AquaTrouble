<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="day_theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/not_so_dark_background</item>
        <item name="colorPrimaryVariant">@color/dark_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="dotsColor">@color/teal_custom</item>
        <item name="dotsStrokeColor">@color/background_white</item>
    </style>
    <style name="ButtonColor" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/background_white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="map_theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/not_so_dark_background</item>
        <item name="colorPrimaryVariant">@color/dark_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="dotsColor">@color/teal_custom</item>
        <item name="dotsStrokeColor">@color/background_white</item>

    </style>
    <style name="search_view_query" parent="Widget.AppCompat.SearchView">
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/background_white</item>
        <item name="android:textColorPrimary">@color/background_white</item>
        <item name="colorOnSecondary">@color/background_white</item>
        <item name="tint">@color/background_white</item>
    </style>
    <style name="custom_menu_nav_bar" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="custom_image_button" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/background_white</item>
    </style>
    <style name="custom_image_view">
        <item name="android:tint">@color/background_white</item>
    </style>
</resources>