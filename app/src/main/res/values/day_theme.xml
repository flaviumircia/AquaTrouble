<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="day_theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/background_white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/background_white</item>
        <item name="dotsColor">@color/teal_custom</item>
        <item name="dotsStrokeColor">@color/dark_foreground</item>
    </style>
    <style name="ButtonColor" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/dark_foreground</item>
        <item name="android:textColor">@color/background_white</item>
    </style>
    <style name="map_theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/background_white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/background_white</item>
        <item name="dotsColor">@color/teal_custom</item>
        <item name="dotsStrokeColor">@color/dark_foreground</item>
    </style>

    <style name="custom_menu_nav_bar" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="custom_list_view" parent="Widget.AppCompat.ListView">
        <item name="fontFamily">@font/comfortaa</item>
    </style>
    <style name="custom_button" parent="Widget.AppCompat.Button">
        <item name="color">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorPrimary">@color/light_blue</item>
    </style>
    <style name="custom_radio_button" parent="RadioButton">
        <item name="cornerRadius">40dp</item>
    </style>
    <style name="custom_image_button" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/dark_background</item>
    </style>
    <style name="custom_image_view">
        <item name="android:tint">@color/black</item>
    </style>
    <style name="custom_bottom_sheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="background">@drawable/filter_background</item>
    </style>
    <style name="custom_search_view" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/comfortaa_light</item>
    </style>
    <style name="custom_layout">
        <item name="android:background">@color/background_contrast</item>
    </style>
    <style name="custom_image_button_fav" parent="Widget.AppCompat.ImageButton">
        <item name="background">@drawable/rectangle</item>
        <item name="backgroundTint">@color/light_blue</item>
    </style>
    <style name="custom_bar" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/black</item>
    </style>
    <style name="custom_color_imageview">
        <item name="tint">@color/background_white</item>
    </style>
    <style name="custom_cardView">
        <item name="android:backgroundTint">@color/background_contrast</item>
    </style>
    <style name="custom_button_details" parent="Widget.AppCompat.Button">
        <item name="color">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/background_white</item>
        <item name="android:drawableBottom">@drawable/ic_see_details</item>
        <item name="colorPrimary">@color/light_blue</item>
    </style>
    <style name="custom_search_view_back" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/outline_rectangle_night</item>
    </style>
    <style name="custom_button_favorites" parent="Widget.AppCompat.Button">
        <item name="color">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/background_white</item>
        <item name="android:drawableLeft">@drawable/ic_icon_favorite_settings</item>
        <item name="colorPrimary">@color/light_blue</item>
    </style>
</resources>