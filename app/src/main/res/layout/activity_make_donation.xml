<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".settings_pref_activities.MakeDonation">

    <TextView
        android:id="@+id/makeDonationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signature_title"
        android:fontFamily="@font/comfortaa"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/backArrowMakeDonation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toEndOf="@+id/backArrowMakeDonation"
        app:layout_constraintTop_toTopOf="@+id/backArrowMakeDonation"
        app:layout_constraintVertical_bias="0.388" />

    <ImageButton
        android:id="@+id/backArrowMakeDonation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        style="@style/custom_image_button"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002"
        app:srcCompat="@drawable/arrow_back" />

    <WebView
        android:id="@+id/webViewDonation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backArrowMakeDonation"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>