<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_infowindow"

    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:elevation="4dp"
    android:translationZ="2dp"
    android:background="@drawable/not_so_round">

    <EditText
        android:id="@+id/title_address_infoWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:background="@color/transparent"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:fontFamily="@font/comfortaa"
        android:singleLine="true"
        android:scrollbars="horizontal"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/background_infowindow"
        app:layout_constraintEnd_toEndOf="@+id/background_infowindow"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="@+id/background_infowindow"
        app:layout_constraintTop_toTopOf="@+id/background_infowindow"
        app:layout_constraintVertical_bias="0.158" />

    <TextView
        android:id="@+id/street_numbers_infoWindow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="TextView"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/background_infowindow"
        app:layout_constraintEnd_toEndOf="@+id/title_address_infoWindow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title_address_infoWindow"
        app:layout_constraintTop_toBottomOf="@+id/title_address_infoWindow"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/close"
        android:textSize="8sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        style="@style/custom_button"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/light_blue"
        android:fontFamily="@font/comfortaa"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/street_numbers_infoWindow"
        app:layout_constraintStart_toStartOf="@+id/street_numbers_infoWindow"
        app:layout_constraintTop_toBottomOf="@+id/street_numbers_infoWindow" />
</androidx.constraintlayout.widget.ConstraintLayout>