<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menufragments.Home">


        <FrameLayout
            android:id="@+id/frameLayoutInHome"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    <info.hoang8f.android.segmented.SegmentedGroup
        android:id="@+id/switchHeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/homeText"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintVertical_bias="0.00"
        app:layout_constraintStart_toStartOf="@+id/homeText"
        app:layout_constraintTop_toBottomOf="@+id/homeText"
        app:sc_border_width="2dp"
        app:sc_checked_text_color="@color/black"
        app:sc_corner_radius="10dp"
        app:sc_tint_color="@color/white">

        <RadioButton
            android:id="@+id/on_heat"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/comfortaa"
            android:text="@string/oprit"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/off_heat"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:text="@string/pornit"
            android:textSize="12sp" />


    </info.hoang8f.android.segmented.SegmentedGroup>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/gradient_shape_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frameLayoutInHome"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/homeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/comfortaa"
        android:text="@string/harta"
        android:textSize="22sp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>